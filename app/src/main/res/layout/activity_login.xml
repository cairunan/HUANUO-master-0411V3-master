<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e6fb7">


    <TextView
        android:id="@+id/huanuo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HUANUO"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/huanuo_logo"
        android:layout_toLeftOf="@+id/huanuo_logo"
        android:layout_toStartOf="@+id/huanuo_logo" />

    <ImageView
        android:id="@+id/huanuo_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/huanuo_logo"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_marginTop="22dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/account"
        android:layout_alignEnd="@+id/account" />

    <Button
        android:id="@+id/login"
        android:layout_width="343dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="登录"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:background="@drawable/login_background"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="343dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/password"
        android:layout_gravity="center"
        android:background="@drawable/shape_corner"
        android:paddingLeft="15dp"
        android:paddingRight="8dp"
        android:maxLength="20"
        android:drawablePadding="12dp"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/account"
        android:layout_alignStart="@+id/account" />

    <EditText
        android:id="@+id/account"
        android:layout_width="343dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/username"
        android:layout_gravity="center"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/shape_corner"
        android:layout_weight="0.05"
        android:paddingLeft="15dp"
        android:maxLength="6"
        android:drawablePadding="12dp"
        android:layout_above="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <CheckBox
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:id="@+id/checkBox1"
        android:button="@drawable/checkbox_forgetpassword"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/huanuo_logo"
        android:layout_alignEnd="@+id/huanuo_logo" />

    <TextView
        android:id="@+id/response_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp" />

    <TextView
        android:id="@+id/forget_password"
        android:text="忘记密码"
        android:textSize="15.5dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/login"
        android:layout_toRightOf="@+id/huanuo_text"
        android:layout_toEndOf="@+id/huanuo_text"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <CheckBox
        android:text="   记住密码"
        android:textSize="15.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:button="@drawable/checkbox_style"
        android:checked="false"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/forget_password"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login" />


</RelativeLayout>